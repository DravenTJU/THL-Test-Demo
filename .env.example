# Environment configuration template
# Copy this file to .env and supply your own values

# Test environment URL
BASE_URL=https://booking.maui-rentals.com
API_BASE_URL=https://booking.maui-rentals.com

# Test parameters
DEFAULT_COUNTRY_CODE=nz
MOBILE_MODE=true

# Test data
DEFAULT_PICKUP_LOCATION=Auckland
DEFAULT_DROPOFF_LOCATION=Christchurch
DEFAULT_RENTAL_DAYS=7

# CI/CD configuration
CI=false
HEADLESS=true

# Reporting configuration
REPORT_OUTPUT_DIR=./playwright-report
ALLURE_OUTPUT_DIR=./allure-results

# Performance test configuration
K6_VUS=50
K6_DURATION=5m
K6_THRESHOLDS_P95=3000

# Timeout configuration (ms)
TEST_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000

# Retry configuration
RETRY_COUNT=2

# Browser configuration
BROWSER=chromium
