{
  "name": "thl-test-demo",
  "version": "1.0.0",
  "description": "THL Test Engineer Demo - Comprehensive Playwright Testing Framework for Maui Rentals Search",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome",
    "test:api": "playwright test tests/api",
    "test:e2e": "playwright test tests/e2e",
    "test:performance": "playwright test tests/performance",
    "test:visual": "playwright test tests/e2e/visual.spec.ts",
    "report": "playwright show-report",
    "report:allure": "allure generate allure-results --clean && allure open",
    "k6:load": "k6 run k6/load-test.js",
    "docker:build": "docker-compose build",
    "docker:test": "docker-compose up --abort-on-container-exit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "prepare": "playwright install"
  },
  "keywords": [
    "playwright",
    "typescript",
    "testing",
    "e2e",
    "api-testing",
    "performance-testing",
    "ci-cd",
    "docker"
  ],
  "author": "THL Test Engineer Candidate",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.48.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "allure-playwright": "^3.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.6.2",
    "prettier": "^3.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "web-vitals": "^4.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
